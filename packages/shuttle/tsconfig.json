{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "rootDir": "./src",
    "isolatedModules": true,
    "exactOptionalPropertyTypes": false,
    "rewriteRelativeImportExtensions": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["build", "node_modules", "jest.config.ts"]
}
